# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                             controllers.Application.index
GET        /circumference                controllers.Application.invalid
GET        /circumference/:r             controllers.Application.circumference(r: Double)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                 controllers.Assets.versioned(path="/public", file: Asset)

GET        /diagnostics/exception        @playIntro.diagnostics.DiagnosticsController.exceptionCheck
GET        /diagnostics/heartbeat        @playIntro.diagnostics.DiagnosticsController.heartbeatCheck
